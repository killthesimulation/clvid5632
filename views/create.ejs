  <div class="signup-slide">
      <div class="signup-slide-inner inner">
         <div class="form-wrapper">
          <div class="signup-hint-1">
              Sign up to become a
          </div>
           <div class="signup-hint-2">
              Clover Citizen
          </div>
           <div class="signup-hint-3">
              Fill the form below
          </div>



    
          
          <div class="signup-form">

            <%- include('partials/messages'); %>


            <form id="signUpForm" action="/wallet/create" method="POST">
                <div class="form-hint-0">Personal information</div>
                <div class="form-hint">Enter your first name</div>

                <input
                    class="signup-input"
                    type="firstName" 
                    id="firstName"
                    name="firstName"
                    autocomplete="off"
                  
                    value="<%= typeof firstName != 'undefined' ? firstName : '' %>"
                />
            
                <div class="form-hint">Enter your last name</div>

                <input
                    class="signup-input"
                    type="lastName" 
                    id="lastName"
                    name="lastName"
                    autocomplete="off"
                    
                    value="<%= typeof lastName != 'undefined' ? lastName : '' %>"
                />

                <div class="form-hint">Where were you born?</div>

                <select id="country"  class="signup-input"  name="country">
                    <option value="" selected disabled hidden>Choose your Country</option>

                    <% phoneCodes.forEach(function(item) { %>
                   


                        <option value="<%= item.name %>"> <%= item.name %></option>
    
    
                        <% }); %>
                   
                  </select>


                  <div class="form-hint">Select your Birth Date</div>


                  <select id="month"  class="signup-input-3x"  name="month">
                    <option value="" selected disabled hidden>Month</option>

                
                   


                        <option value="January">January</option>

                        <option value="February">February</option>

                        <option value="March">March</option>

                        <option value="April">April</option>

                        <option value="May">May</option>

                        <option value="June">June</option>

                        <option value="July">July</option>

                        <option value="August">August</option>

                        <option value="September">September</option>

                        <option value="October">October</option>

                        <option value="November">November</option>

                        <option value="December">December</option>

            
    
                       
                   
                  </select>


                  <select id="day"  class="signup-input-3x"  name="day">
                    <option value="" selected disabled hidden>Day</option>

                    <% for (var i = 1; i < 32; i++) {  %>
                   


                        <option value="<%= i %>"> <%= i %></option>
    
    
                        <% }; %>
                   
                  </select>


                  <select id="year"  class="signup-input-3x"  name="year">
                    <option value="" selected disabled hidden>Year</option>

                    <% for (var i = 2020; i > 1919; i--) {  %>
                   


                        <option value="<%= i %>"> <%= i %></option>
    
    
                        <% }; %>
                   
                  </select>




                  




                

                <div class="form-hint">Select your gender</div>

                <select id="gender"  class="signup-input"  name="gender">
                    <option value="" selected disabled hidden>Choose your gender</option>
                    <option value="male">I'm a man</option>
                    <option value="female">I'm a woman</option>
                  </select>

                <div class="form-hint">Enter your email</div>
            
                <input
                    class="signup-input"
                    type="email" 
                    id="email"
                    name="email"
                    autocomplete="off"
                 
                    value="<%= typeof email != 'undefined' ? email : '' %>"
                />

                <div class="form-hint">Enter your phone number</div>
            
                <input
                    class="signup-input"
                    type="tel"
                    id="phone"
                    name="phone"
                    autocomplete="off"
                  
                    value="<%= typeof phone != 'undefined' ? phone : '' %>"
                />

                

                <div class="form-hint-0 form-hint-0-2">Citizen information</div>
                <div class="form-hint">Enter your referral code (optional)</div>
            
                <input
                    class="signup-input"
                    type="referral" 
                    id="referral"
                    name="referral"
                    autocomplete="off"
                 
                    value="<%= typeof referral != 'undefined' ? referral : '' %>"
                />

                <div class="form-hint">Create your password</div>
            
                <input
                class="signup-input"
                type="password" 
                id="password"
                name="password"
                autocomplete="off"
               
                value="<%= typeof password != 'undefined' ? password : '' %>"
                />

                <div class="form-hint">Confirm your password</div>
            
                <input
                class="signup-input"
                type="password" 
                id="password2"
                name="password2"
                autocomplete="off"
                
                value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
                />

                <div class="g-recaptcha" data-sitekey="6LdjfNkZAAAAABT3TVa--WhAgV9Ek2Cqckho7ZXO"></div>
            
                <button class="signup-input signup-submit" type="submit">Become a citizen</button>
            </form>

            <a href="/wallet/login" class="form-link">Already have an account?<br>Log in right now!</a>



          </div>



          </div>
      </div>
