<a href="/admin/main" class="admin-page-link"><i class="fas fa-arrow-left"></i> Back to main page </a>
<a href="/admin/exportSellOrders" class="admin-page-link"><i class="fas fa-user-friends"></i> Export Sell Orders to Email </a>

<div class="admin-page-title">
    Sell Orders List
</div>


<div class="admin-new-sell-orders-list">
    <div class="admin-new-sell-orders-list-line">


        <div class="admin-new-sell-orders-list-line-item">
            Amount
        </div>

        <div class="admin-new-sell-orders-list-line-item">
            Active
        </div>

        <div class="admin-new-sell-orders-list-line-item">
            Date (dd/mm/yyyy)
        </div>

        <div class="admin-new-sell-orders-list-line-item">
            Date Closed (dd/mm/yyyy)
        </div>

      
    </div>


    <% sellOrders.forEach(function(item) { %>
    <a href="/admin/citizen/?id=<%= item.ownerId %>" class="admin-new-sell-orders-list-line">

        <div class="admin-new-sell-orders-list-line-item">
            <%= item.amount %> CLV
        </div>

        <div class="admin-new-sell-orders-list-line-item">
            <%= item.active %>
        </div>

        <div class="admin-new-sell-orders-list-line-item">
            <%= item.dateCreated.getDate() %>.<%= item.dateCreated.getMonth() + 1 %>.<%= item.dateCreated.getFullYear()%>
        </div>

        <div class="admin-new-sell-orders-list-line-item">
            <%= item.closeDate %>
        </div>


        <div class="admin-new-sell-orders-list-line-item">
        <form action="/admin/closeSellOrder" method="POST">
            <input type="hidden" value="<%= item._id %>" name="id">
            <input type="submit"  class="admin-input-submit-clear" value="Close">
        </form>
    </div>
    


      
    </a>


    <% }); %>



</div>